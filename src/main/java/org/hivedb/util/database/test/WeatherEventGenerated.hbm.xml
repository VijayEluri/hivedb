<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="org.hivedb.util.database.test">
	<class name="WeatherEventGenerated" table="WEATHER_EVENT">
		<id name="eventId" column="EVENT_ID" unsaved-value="0"/>
		<property name="continent" column="CONTINENT"/>
    	<property name="name" column="NAME"/>
    	<bag name="statistics" table="EVENT_STATISTIC" lazy="false">
    	 	<key column="EVENT_ID" />
			<element type="integer" column="STAT"/>
		</bag>
    </class>
</hibernate-mapping>