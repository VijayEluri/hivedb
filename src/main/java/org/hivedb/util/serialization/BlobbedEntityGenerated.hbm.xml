<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="org.hivedb.util.serialization">
    <class name="BlobbedEntityGenerated" table="BLOBBED_ENTITY">
		<id name="id" column="ID">
			<generator class="foreign">
            	<param name="property">entity</param>
        	</generator>
        </id>
        <property name="value" column="VALUE"/>
        <one-to-one name="entity" class="org.hivedb.util.serialization.BlobbedEntityGenerated"/>
    </class>
</hibernate-mapping>